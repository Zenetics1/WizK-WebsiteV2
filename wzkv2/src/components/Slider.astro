---
interface Props{
    VidLink : string;
    header : String;
}
const{VidLink, header} = Astro.props;
---
<div class="bg-white h-96 rounded-2xl shadow-md">

    <div class="h-64 border-white">
        <iframe 
        width="100%" height="100%" 
        src={VidLink} 
        title="YouTube video player"  
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
        referrerpolicy="strict-origin-when-cross-origin"
        allowfullscreen>
        </iframe>
        <h1 class="font-mono text-center text-2xl font-bold">{header}</h1>
        <p class="font-mono text-center text-sm font-bold"><slot /></p>
    </div>
       
</div>