---
import { ViewTransitions } from 'astro:transitions';


interface Props {
	webTitle: string;
	hrefAM: string;
	hrefPF: string;
	hrefCM: string;
}

const { webTitle, hrefAM, hrefPF, hrefCM } = Astro.props;
---
		<nav class="font-mono p-2 m-0 bg-white w-full h-24 flex items-center">
			<div class="flex items-center">
				<span class="transition ease-in-out delay-75 hover:scale-110 text-bold text-transparent bg-clip-text bg-gradient-to-r from-red-800 via-red-500 to-yellow-500 inline-block justify-start pl-10 text-6xl">
					{webTitle}
				</span>
			</div>
			<ul class="flex items-center gap-11 p-0 ml-auto mr-10 text-2xl">
				<li class="transition ease-in-out delay-75 hover:scale-105 hover:text-red-500 "> 
					<a href={hrefAM}>About Me</a>
				</li>
				<li class="transition ease-in-out delay-75 hover:text-red-500 hover:scale-105"> 
					<a href={hrefPF}>Portfolio</a>
				</li>
				<li class="transition ease-in-out delay-75 hover:text-red-500 hover:scale-105"> 
					<a href={hrefCM} >Contact</a>
				</li>
			</ul>
		</nav>
	

