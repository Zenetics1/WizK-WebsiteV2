---
interface Props {
	webTitle: string;
	hrefAM: string;
	hrefPF: string;
	hrefCM: string;
}

const { webTitle, hrefAM, hrefPF, hrefCM } = Astro.props;
---
<div class="bg-white w-screen h-5/6 shadow-lg"> 
		<nav class=" font-mono p-0 m-0 h-full">
			<ul class="flex items-center justify-between ">
				<li class="text-bold text-transparent bg-clip-text bg-gradient-to-r from-red-800 via-red-500 to-blue-700 inline-block justify-start pl-10 text-5xl">
					{webTitle}
				</li>
				<div class="flex gap-10 space-x-4 pr-6 text-xl m-5 ">
					<li class=""> 
						<a href={hrefAM}>
							About Me
						</a>
					</li>
					<li> 
						<a href={hrefPF}>
							Portfolio
						</a>
					</li>
					<li> 
						<a href={hrefCM}>
							Contact Me
						</a>
					</li>
				</div>
			</ul>
		</nav>
</div>
	
	
