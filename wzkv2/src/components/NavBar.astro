---
import { ViewTransitions } from 'astro:transitions';


interface Props {
	webTitle: string;
	hrefAM: string;
	hrefPF: string;
	hrefCM: string;
}

const { webTitle, hrefAM, hrefPF, hrefCM } = Astro.props;
---
<div class="bg-white backdrop-opacity-15 w-screen h-24 shadow-md shadow-black z-99 "> 
		<nav class=" font-mono p-2 m-0">
			<ul class="flex items-center justify-between ">
				<li class="transition ease-in-out delay-75 hover:scale-110 text-bold text-transparent bg-clip-text bg-gradient-to-r from-red-800 via-red-500 to-yellow-500 inline-block justify-start pl-10 text-6xl">
					{webTitle}
				</li>
				<div class="flex gap-10 space-x-4 pr-6 text-2xl m-5 text-black">
					<li class="transition ease-in-out delay-75 hover:scale-105 hover:text-red-500"> 
						<a href={hrefAM} data-astro-prefetch="tap">
							About Me
						</a>
					</li>
					<li class="transition ease-in-out delay-75 hover:text-red-500 hover:scale-105"> 
						<a href={hrefPF} data-astro-prefetch>
							Portfolio
						</a>
					</li>
					<li class="transition ease-in-out delay-75 hover:text-red-500 hover:scale-105"> 
						<a href={hrefCM} data-astro-prefetch="tap">
							Contact
						</a>
					</li>
				</div>
			</ul>
		</nav>
</div>
	

