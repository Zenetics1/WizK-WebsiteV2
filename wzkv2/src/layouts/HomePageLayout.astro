---
import HMHeader from '../components/NavBar.astro';
import Footer from '../components/Footer.astro';
import { fade, slide, ViewTransitions } from 'astro:transitions';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html transition:animate="fade" lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, intial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
		<script type="text/javascript" src="https://unpkg.com/typed.js@2.1.0/dist/typed.umd.js"></script>
	</head>
	
	<body transition:animate="none" class="bg-fixed bg-black bg-no-repeat bg-cover m-0 overflow-hidden h-screen" style="background-image:url(/webimg2.jpg);">
		<div>
			<HMHeader webTitle='WIZK' hrefAM='/' hrefPF='/portforlio/' hrefCM='mailto:wizktec@gmail.com'></HMHeader>
		</div>
			<slot transition:animate={fade({duration: '40.0'})} />
		<div class="relative bottom-0 top-[450px]">
			<Footer></Footer>
		</div>
		
	</body>
	
</html>
